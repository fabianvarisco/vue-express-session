    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by process id",
            "port": 9230,
            "processId": "${command:PickProcess}",
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Restart",
            "port": 9230,
            "restart": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "port": 9230,
            "program": "${workspaceFolder}/server"
        }
    ]
}
